<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <%= wicked_pdf_stylesheet_link_tag 'application', media: 'all' %>
  </head>


  <body>
  <div class="letterstyle">

    <!-- header -->

    <div class="letterhead">
      <div class="letterhead-left">
        <%= wicked_pdf_image_tag('logo_client', class: 'imageletter') %>
        <p><strong>IMMO 3000</strong></p>
        <p><%= "#{current_user.first_name} #{current_user.last_name}" %></p>
        <p><%= current_user.position %> </p>
      </div>

      <div class="letterhead-right">
        <h1><%= @event.lease.tenant_name %></h1>
        <h2><%=  @event.lease.tenant_address%></h2>
        <p>Paris, le <%= Date.today %> </p>
      </div>

    </div>

    <!-- content -->
    <div class="lettercontent">
      <%= render 'events/letters/conge_renouv' %>
    </div>

    <!-- footer -->
    <div class="letterfooter">
      <%= wicked_pdf_image_tag 'signature' %>
    </div>

  </div>
  </body>
</html>
