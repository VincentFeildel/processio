<div class="navbar-wagon">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <img width="120" height="54" src="<%= image_path "leasy_logo_blue.png"%>" alt="logo_leasy">
  </a>
  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <!-- Profile picture with dropdown list -->

     <div class="search-bar-div">
      <%= form_tag events_path, method: :get do %>
      <%=  search_field_tag 'search', params[:search], class: "search-bar", placeholder: "Recherche propriétaire" %>
          <i class='fa fa-search', type='submit', style="color: rgb(220,220,220)"></i>
    <% end %>
    </div>
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <img src="https://kitt.lewagon.com/placeholder/users/florentlienard" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><a href="#">Profil</a></li>
          <li><a href="#">Messages</a></li>
          <li> <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete%> </li>
        </ul>
      </div>
    </div>
  </div>
  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Profil</a></li>
        <li><a href="#">Messages</a></li>
      </ul>
    </div>
  </div>
</div>
<!-- Second nav bar -->
<div class="navbar-features">
      <!-- Home -->
  <%= link_to root_path, class: 'navbar-wagon-item navbar-wagon-link', id: 'home' do %>
    <div class="first-row">
            <span class = picto-nav><i class="fa fa-home" aria-hidden="true"></i></span>
        <span class = "name-tab">Accueil</span>
    </div>
  <% end %>
        <!-- Events -->
        <%= link_to events_path, class: 'navbar-wagon-item navbar-wagon-link', id: 'events' do %>
        <div class="first-row">
                <span class = picto-nav><i class="fa fa-calendar-check-o" aria-hidden="true"></i></span>
            <span class = "name-tab">Évenements</span>
        </div>
      <% end %>
        <%= link_to leases_path, class: 'navbar-wagon-item navbar-wagon-link', id: 'leases' do %>
        <div class="first-row">
          <span class = picto-nav><i class="fa fa-handshake-o" aria-hidden="true"></i></span>
          <span class = "name-tab">Contrats</span>
        </div>
        <% end %>
        <!-- Leases -->

</div>
<script>
const zone = document.getElementsByClassName("navbar-features")[0];
zone.querySelectorAll("a").forEach((a) => {
// a.addEventListener("click", (event) => {
let url = window.location.href;
if (url.match(/\/event/) !== null | url.match(/\/urgent_events/) !== null) {
document.getElementById('events').classList.add("navbar-active");
} else if (url.match(/\/lease/) !== null) {
document.getElementById('leases').classList.add("navbar-active");
} else {
document.getElementById('home').classList.add("navbar-active");
}
});
</script>
