<% if current_user %>

<div class="container">
  <h1>Bienvenue <%= @user.first_name %></h1>
  <%= render 'progressbar' %>
  <div class="actioncards">
    <div class="row">
      <div class="col-xs-12-sm-9">
        <div class="actioncard">
          <h2><%= @nbr_urgent %></h2>
          <p>Evènements urgents</p>
          <%= link_to 'Voir', events_path(emergency_level: "urgent") %>
        </div>
      </div>
    </div>

      <!-- Par catégorie -->
    <div class="row">
      <div class="col-xs-12-sm-3">
        <div class="actioncard">
          <h2><%= @nbr_end_lease %></h2>
          <p>Fins de bail</p>
          <%= link_to 'Voir', events_path(end_of_lease: 'on') %>
        </div>
      </div>
      <div class="col-xs-12-sm-3">
        <div class="actioncard">
          <h2><%= @nbr_rent_rev %></h2>
          <p>Retards de loyer</p>
          <%= link_to 'Voir', events_path(late_rent: 'on') %>
        </div>
      </div>
        <div class="col-xs-12-sm-3">
          <div class="actioncard">
            <h2><%= @nbr_late_rent %></h2>
            <p>Révisions de loyer</p>
            <%= link_to 'Voir', events_path(rent_revision: 'on') %>
        </div>
      </div>
    </div>

  </div>

<!-- Chart -->

<%
      data = {
        labels: ["January", "February", "March", "April", "May", "June", "July"],
        datasets: [
          {
              label: "My First dataset",
              backgroundColor: "rgba(220,220,220,0.2)",
              borderColor: "rgba(220,220,220,1)",
              data: [65, 59, 80, 81, 56, 55, 40]
          },
          {
              label: "My Second dataset",
              backgroundColor: "rgba(151,187,205,0.2)",
              borderColor: "rgba(151,187,205,1)",
              data: [28, 48, 40, 19, 86, 27, 90]
          }
        ]
      }
    %>

  <%= line_chart data %>

</div>


<% else %>
<%= render 'not_connected' %>
<% end%>
